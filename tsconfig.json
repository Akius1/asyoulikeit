//tsconfig.json

{
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "./build",
    "sourceMap": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "types": [ "node", "jest", "@testing-library/jest-dom"],
    "moduleResolution": "node",
    "lib": ["esnext", "dom","webworker"]
  },
  "esModuleInterop": true,
  "include": ["src/**/*", "<rootDir>/src/setupTests.ts"],
  "exclude": ["cypress"]
}
